<h1>codeeeeeeeee <%=title%></h1>
<section id="feed-posts">
    <h4>Posts</h4>
    <%if(locals.user){%>
    <form action="/post/create" id="new-post-form" method="post">
        <textarea name="content" cols="30" rows="3" placeholder="Type here"></textarea>
        <button type="submit">Post</button> 
    </form>
    <%}%> 
    <div id="post-list">
        <ul>
            <%for(let i of posts){%>
                <%- include('_post', { i: i }) -%>
                <%}%>
        </ul>
    </div>
</section>