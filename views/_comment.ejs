<li id="comment-<%=comment._id%>">
    <p>
        <i class="fa-regular fa-comment"></i>
        <%=comment.content%>
        <%if((locals.user)&&(locals.user.id==comment.user.id)){%>
            <a class="delete-comment-button" href="/comments/destroy/<%=comment._id%>"><i class="fa-solid fa-trash"></i></a>
            <%}%>
        <br>
        <small>
            <%=comment.user.name%>
        </small>
    </p>
</li>
